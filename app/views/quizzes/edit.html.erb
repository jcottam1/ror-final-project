<h1>Editing quiz</h1>

#<%= render "form", quiz: @quiz %>
<%= form_with(model: @quiz, url: quiz_path(@quiz), method: :patch) do |form| %>

  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :quiz_type %>
  <%= form.select :quiz_type, Quiz::QUIZ_TYPES %>

  <%= form.label :time_limit %>
  <%= form.number_field :time_limit, min: 0 %>

  <%= form.submit %>

<% end %>

<br>

<div>
  <%= link_to "Show this quiz", @quiz %> |
  <%= link_to "Back to quizzes", quizzes_path %>
</div>
